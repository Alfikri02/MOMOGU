<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.momogu">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_cow"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MOMOGU"
        tools:targetApi="31">
        <activity android:name=".ReceiptUserActivity" />
        <activity android:name=".ReceiptPostActivity" />
        <activity android:name=".CheckoutActivity" />
        <activity android:name=".DetailProfileActivity" />
        <activity android:name=".BreederActivity" />
        <activity android:name=".DetailPostActivity" />
        <activity android:name=".WelcomeActivity" />
        <activity android:name=".SignInActivity" />
        <activity android:name=".AddPostActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".EditProductActivity" />
        <activity android:name=".EditProfileActivity" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>