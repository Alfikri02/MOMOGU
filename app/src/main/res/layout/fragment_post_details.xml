<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PostDetailsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:id="@+id/close_detail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/content"
                    android:src="@drawable/ic_close" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_thin"
                    android:text="@string/detail"
                    android:textSize="20sp"
                    tools:ignore="RelativeOverlap" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar_detail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_post"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/image_border"
                android:contentDescription="@string/content"
                android:scaleType="fitCenter"
                android:src="@drawable/momogu_with_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/price_detail"
                android:layout_width="@dimen/zerodp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="22dp"
                android:fontFamily="@font/poppins_thin"
                android:text="@string/price"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/image_post" />

            <TextView
                android:id="@+id/product_detail"
                android:layout_width="@dimen/zerodp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/poppins_light"
                android:text="@string/product"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/price_detail" />

            <TextView
                android:id="@+id/date_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/date"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/price_detail" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_detail" />

            <ImageView
                android:id="@+id/ic_weight"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/content"
                android:src="@drawable/ic_profile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1" />

            <TextView
                android:id="@+id/ti_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/weight_estimation"
                app:layout_constraintStart_toEndOf="@+id/ic_weight"
                app:layout_constraintTop_toTopOf="@+id/ic_weight" />

            <TextView
                android:id="@+id/et_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/zero"
                app:layout_constraintBottom_toBottomOf="@+id/ic_weight"
                app:layout_constraintStart_toEndOf="@+id/ic_weight"
                app:layout_constraintTop_toBottomOf="@+id/ti_weight" />

            <ImageView
                android:id="@+id/ic_age"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/content"
                android:src="@drawable/ic_profile"
                app:layout_constraintStart_toEndOf="@+id/ti_weight"
                app:layout_constraintTop_toBottomOf="@+id/line1" />

            <TextView
                android:id="@+id/ti_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/age_"
                app:layout_constraintStart_toEndOf="@+id/ic_age"
                app:layout_constraintTop_toTopOf="@+id/ic_age" />

            <TextView
                android:id="@+id/et_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/zero"
                app:layout_constraintBottom_toBottomOf="@+id/ic_age"
                app:layout_constraintStart_toEndOf="@+id/ic_age"
                app:layout_constraintTop_toBottomOf="@+id/ti_age" />

            <ImageView
                android:id="@+id/ic_gender"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/content"
                android:src="@drawable/ic_profile"
                app:layout_constraintStart_toStartOf="@id/ic_weight"
                app:layout_constraintTop_toBottomOf="@+id/ic_weight" />

            <TextView
                android:id="@+id/ti_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/gender"
                app:layout_constraintStart_toEndOf="@+id/ic_gender"
                app:layout_constraintTop_toTopOf="@+id/ic_gender" />

            <TextView
                android:id="@+id/et_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/zero"
                app:layout_constraintBottom_toBottomOf="@+id/ic_gender"
                app:layout_constraintStart_toEndOf="@+id/ic_gender"
                app:layout_constraintTop_toBottomOf="@+id/ti_gender" />

            <ImageView
                android:id="@+id/ic_color"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/content"
                android:src="@drawable/ic_profile"
                app:layout_constraintStart_toStartOf="@+id/ic_age"
                app:layout_constraintTop_toBottomOf="@+id/ic_age" />

            <TextView
                android:id="@+id/ti_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/color"
                app:layout_constraintStart_toEndOf="@+id/ic_color"
                app:layout_constraintTop_toTopOf="@+id/ic_color" />

            <TextView
                android:id="@+id/et_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/zero"
                app:layout_constraintBottom_toBottomOf="@+id/ic_color"
                app:layout_constraintStart_toEndOf="@+id/ic_color"
                app:layout_constraintTop_toBottomOf="@+id/ti_color" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ti_desc"
                style="@style/ti_layout"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:hint="@string/desc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ic_color">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_desc"
                    style="@style/et_layout"
                    android:drawableStart="@drawable/ic_name"
                    android:inputType="textMultiLine" />

            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ti_desc" />

            <LinearLayout
                android:id="@+id/linear_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line2">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:padding="5dp"
                    android:src="@drawable/profile" />

                <TextView
                    android:id="@+id/tv_fullname_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/poppins_thin"
                    android:text="@string/full_name"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear_profile" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_buy"
                style="@style/greenButtonStyle"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="@string/buy"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line3" />

            <ImageButton
                android:id="@+id/btn_wa"
                style="@style/greenButtonStyle"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginEnd="20dp"
                android:contentDescription="@string/content"
                app:layout_constraintBottom_toBottomOf="@+id/btn_buy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btn_buy" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>