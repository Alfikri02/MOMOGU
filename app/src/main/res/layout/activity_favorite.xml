<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavoriteActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp">

                <ImageView
                    android:id="@+id/close_detail"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/content"
                    android:src="@drawable/ic_close" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/poppins_thin"
                    android:text="@string/detail"
                    android:textSize="20sp"
                    tools:ignore="RelativeOverlap" />

                <ImageView
                    android:id="@+id/remove_fav"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/content"
                    android:src="@drawable/favorite" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar_detail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-6dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/image_post"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/momogu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:background="@color/lima"
                    android:fontFamily="@font/poppins_light"
                    android:text="Tekan untuk perbesar"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_image"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/price_detail"
                        android:layout_width="@dimen/zerodp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/poppins_thin"
                        android:text="@string/price"
                        android:textSize="22sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/product_detail"
                        android:layout_width="@dimen/zerodp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="@string/product"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/price_detail" />

                    <TextView
                        android:id="@+id/date_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="@string/date"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/price_detail"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/price_detail" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_seevideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_header"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/btnSeeVideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="6dp"
                    android:text="Lihat Kondisi Sapi"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    app:drawableEndCompat="@drawable/ic_forward" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_seevideo"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ic_weight"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/content"
                        android:src="@drawable/ic_profile"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/ti_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/weight_estimation"
                        app:layout_constraintStart_toEndOf="@+id/ic_weight"
                        app:layout_constraintTop_toTopOf="@+id/ic_weight" />

                    <TextView
                        android:id="@+id/et_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/zero"
                        app:layout_constraintBottom_toBottomOf="@+id/ic_weight"
                        app:layout_constraintStart_toEndOf="@+id/ic_weight"
                        app:layout_constraintTop_toBottomOf="@+id/ti_weight" />

                    <ImageView
                        android:id="@+id/ic_age"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="80dp"
                        android:layout_marginTop="10dp"
                        android:contentDescription="@string/content"
                        android:src="@drawable/ic_profile"
                        app:layout_constraintStart_toEndOf="@+id/ti_weight"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/ti_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/age_"
                        app:layout_constraintStart_toEndOf="@+id/ic_age"
                        app:layout_constraintTop_toTopOf="@+id/ic_age" />

                    <TextView
                        android:id="@+id/et_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/zero"
                        app:layout_constraintBottom_toBottomOf="@+id/ic_age"
                        app:layout_constraintStart_toEndOf="@+id/ic_age"
                        app:layout_constraintTop_toBottomOf="@+id/ti_age" />

                    <ImageView
                        android:id="@+id/ic_gender"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="20dp"
                        android:contentDescription="@string/content"
                        android:src="@drawable/ic_profile"
                        app:layout_constraintStart_toStartOf="@id/ic_weight"
                        app:layout_constraintTop_toBottomOf="@+id/ic_weight" />

                    <TextView
                        android:id="@+id/ti_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/gender"
                        app:layout_constraintStart_toEndOf="@+id/ic_gender"
                        app:layout_constraintTop_toTopOf="@+id/ic_gender" />

                    <TextView
                        android:id="@+id/et_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/zero"
                        app:layout_constraintBottom_toBottomOf="@+id/ic_gender"
                        app:layout_constraintStart_toEndOf="@+id/ic_gender"
                        app:layout_constraintTop_toBottomOf="@+id/ti_gender" />

                    <ImageView
                        android:id="@+id/ic_color"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="20dp"
                        android:contentDescription="@string/content"
                        android:src="@drawable/ic_profile"
                        app:layout_constraintStart_toStartOf="@+id/ic_age"
                        app:layout_constraintTop_toBottomOf="@+id/ic_age" />

                    <TextView
                        android:id="@+id/ti_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="@string/color"
                        app:layout_constraintStart_toEndOf="@+id/ic_color"
                        app:layout_constraintTop_toTopOf="@+id/ic_color" />

                    <TextView
                        android:id="@+id/et_color"
                        android:layout_width="@dimen/zerodp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:text="@string/zero"
                        app:layout_constraintBottom_toBottomOf="@+id/ic_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/ic_color"
                        app:layout_constraintTop_toBottomOf="@+id/ti_color" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ti_desc"
                        style="@style/ti_layout"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:hint="@string/desc"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/et_color">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_desc"
                            style="@style/et_layout"
                            android:clickable="false"
                            android:drawableStart="@drawable/ic_name"
                            android:focusable="false"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_detail"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profile_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_profile"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginVertical="4dp"
                        android:padding="5dp"
                        android:src="@drawable/profile"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_fullname_detail"
                        android:layout_width="@dimen/zerodp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginBottom="-8dp"
                        android:fontFamily="@font/poppins_thin"
                        android:text="@string/full_name"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toTopOf="@+id/tv_status_detail"
                        app:layout_constraintEnd_toStartOf="@+id/forward_detail"
                        app:layout_constraintStart_toEndOf="@+id/user_profile" />
                    '
                    <ImageView
                        android:id="@+id/dotStatus"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:contentDescription="@string/content"
                        android:src="@drawable/ic_dot"
                        android:layout_marginTop="-10dp"
                        app:layout_constraintTop_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/user_profile"
                        app:layout_constraintBottom_toTopOf="parent"
                        app:tint="@color/colorBlack" />

                    <TextView
                        android:id="@+id/tv_status_detail"
                        android:layout_width="@dimen/zerodp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-6dp"
                        android:padding="6dp"
                        android:text="Status"
                        android:textSize="12sp"
                        app:layout_constraintBottom_toBottomOf="@+id/dotStatus"
                        app:layout_constraintStart_toEndOf="@+id/dotStatus"
                        app:layout_constraintEnd_toStartOf="@+id/forward_detail"
                        app:layout_constraintTop_toTopOf="@+id/dotStatus" />

                    <TextView
                        android:id="@+id/tv_city_detail"
                        android:layout_width="@dimen/zerodp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="-4dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="City"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toStartOf="@+id/forward_detail"
                        app:layout_constraintStart_toEndOf="@+id/user_profile"
                        app:layout_constraintTop_toBottomOf="@+id/tv_status_detail" />

                    <ImageView
                        android:id="@+id/forward_detail"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:layout_marginEnd="6dp"
                        android:contentDescription="@string/content"
                        android:src="@drawable/ic_forward"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_seeLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_profile"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/btnSeeLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="6dp"
                    android:text="See Location"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    app:drawableEndCompat="@drawable/ic_forward" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_shipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_seeLocation"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/shipping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Pengiriman"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_price_shipping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/zero"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/shipping"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="Metode Pembayaran"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/On"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_price_shipping"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:fontFamily="@font/poppins_thin"
                        android:text="Ditempat"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/On"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="Mohon sediakan uang pas"
                        android:textColor="@color/g_light_red"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_buy"
                style="@style/greenButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/cv_shipper"
                android:layout_alignParentStart="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="20dp"
                android:layout_toStartOf="@+id/btn_call"
                android:text="@string/buy"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/btn_call"
                style="@style/greenButtonStyle"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_below="@+id/cv_shipper"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/content"
                android:src="@drawable/ic_call"
                app:tint="@color/white" />

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/layoutSoldView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar_detail"
        android:background="@color/empat"
        android:foregroundGravity="center"
        android:gravity="center"
        android:visibility="gone">

    </RelativeLayout>

</RelativeLayout>